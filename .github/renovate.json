{
  "extends": [
    "config:recommended"
  ],
  "schedule": ["on sunday"],
  "includePaths": [
    "buildSrc/gradle/**",
    "gradle/**",
    ".github/**"
  ],
  "ignoreDeps": ["keiyoushi/issue-moderator-action"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "{{manager}} dependencies"
    },
    {
      "matchManagers": ["gradle"],
      "enabled": false
    }
  ]
}
